---
import { Icon } from 'astro-icon'
import Section from '@layouts/Section.astro'
import Title from '@components/Common/Title.astro'
import Moodlets from './Moodlets/index.astro';
---
<Section>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md flex flex-col items-center justify-center min-h-[calc(100vh-14rem)] pb-12">
      <Title>
        Straight out of deep space
      </Title>
      <p class="animate-enter text-xl text-subtle italic mb-5 lg:text-xl" style="--stagger: 2">
        Lunar is a minimal, black and blue color scheme inspired by space.
      </p>
      <a href="/palette" class="btn btn-primary gap-2 normal-case bg-outer-core hover:bg-tropo text-text">
        Discover 
        <Icon name="fa:space-shuttle" class="h-4 w-4"/>
      </a>
    </div>
  </div>
</Section>
<Moodlets />
