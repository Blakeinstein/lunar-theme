---
import { Icon } from 'astro-icon'
import Section from '@layouts/Section.astro'
---
<Section>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md">
      <h1 class="mb-5 text-7xl lg:text-8xl font-extrabold italic capitalize animate-enter font-display gradient-text" style="--stagger: 1">
       404
      </h1>
      <p class="animate-enter text-xl text-subtle italic mb-5 lg:text-xl" style="--stagger: 2">
        Not found
      </p>
      <a href="/" class="btn btn-primary gap-2 normal-case bg-outer-core hover:bg-tropo">
        <Icon name="carbon:earth-filled" class="h-4 w-4"/>
        Go Home 
      </a>
    </div>
  </div>
</Section>