---
import BaseHead from '@components/Head.astro'
import Nav from '@components/Navbar/index.astro'
import Footer from '@components/Footer/index.astro'

export interface Props {
  active: string
}

const { active } = Astro.props as Props
---

<html lang="en" data-theme="lunar">
  <head>
    <BaseHead />
  </head>
  <body>
    <div class="hero min-h-screen flex flex-col relative drop-shadow-lg shadow-lg bg-inner-core">
      <div class="max-w-full overflow-x-hidden absolute inset-0 background-grid" />
      <Nav active={active}/>
      <main class="grow flex flex-col items-center justify-center relative">
        <slot name="hero"/>
      </main>
    </div>
    <slot />
    <Footer />
  </body>
</html>