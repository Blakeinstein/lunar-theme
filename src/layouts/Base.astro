---
import BaseHead from '../components/Head.astro'
import Nav from '../components/Navbar/index.astro'
import Footer from '../components/Footer/index.astro'
---

<html lang="en" data-theme="lunar">
  <head>
    <BaseHead />
  </head>
  <body>
    <div class="hero min-h-screen flex flex-col relative drop-shadow-lg shadow-lg" style="background-color: #0b0d0f;">
      <div class="absolute inset-0 z-0">
        <img class="w-full h-full object-cover blur-sm brightness-75" src="https://cdn.discordapp.com/attachments/864495905364508713/950854415097688074/space-blue.gif" />
      </div>
      <Nav />
      <main class="grow flex flex-col items-center justify-center relative">
        <slot name="hero"/>
      </main>
    </div>
    <slot />
    <Footer />
  </body>
</html>